	Storage storage;
	
	public AutoAufraege (Storage storage) {
		this.storage = storage;
	}
	
	public String [] [] klassenAuftrag (Buch buch, UnterMittelStufe klasse) {
		int jahrgangsstufe = buch.jahrgangsstufe;
		String fach = buch.fach;
		int religion;
		
		if (fach.compareToIgnoreCase("katholisch") == 0) {
			religion = 0;
		}
		if (fach.compareToIgnoreCase("evangelisch") == 0) {
			religion = 1;
		}
		if (fach.compareToIgnoreCase("ethik") == 0) {
			religion = 2;
		}
