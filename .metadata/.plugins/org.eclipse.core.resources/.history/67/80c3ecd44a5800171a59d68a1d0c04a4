package view;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import model.Lehrer;
import model.Storage;

import javax.swing.GroupLayout;
import javax.swing.ImageIcon;
import javax.swing.GroupLayout.Alignment;
import javax.swing.JLabel;
import java.awt.Font;
import java.awt.Image;

import javax.swing.JButton;
import javax.swing.LayoutStyle.ComponentPlacement;
import javax.swing.JTextField;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class LehrerGUI extends JFrame {

	private JPanel contentPane;
	private JTextField textField;
	private JTextField textField_1;
	private JTextField textField_2;
	private JTextField textField_3;
	Storage storage;

	

	/**
	 * Create the frame.
	 */
	public LehrerGUI(Storage storage) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 800, 450);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		this.storage=storage;
		
		JLabel lblNeuerEintragFr = new JLabel("Neuer Eintrag für Lehrer");
		lblNeuerEintragFr.setBounds(333, 20, 146, 14);
		lblNeuerEintragFr.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JButton btnZurck = new JButton("Zurück");
		btnZurck.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				dispose();
			}
		});
		btnZurck.setBounds(15, 16, 75, 23);
		btnZurck.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JLabel lblVorname = new JLabel("Vorname");
		lblVorname.setBounds(238, 139, 44, 14);
		lblVorname.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JLabel lblNachname = new JLabel("Nachname");
		lblNachname.setBounds(238, 177, 90, 14);
		lblNachname.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JLabel lblKrzel = new JLabel("Kürzel");
		lblKrzel.setBounds(238, 215, 90, 14);
		lblKrzel.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JLabel lblTelefonnummer = new JLabel("Telefonnummer");
		lblTelefonnummer.setFont(new Font("Arial", Font.PLAIN, 11));
		lblTelefonnummer.setBounds(238, 253, 90, 14);
		
		textField = new JTextField();
		textField.setBounds(455, 136, 102, 20);
		textField.setColumns(10);
		
		textField_1 = new JTextField();
		textField_1.setBounds(455, 174, 102, 20);
		textField_1.setColumns(10);
		
		textField_2 = new JTextField();
		textField_2.setBounds(455, 212, 102, 20);
		textField_2.setColumns(10);
		
		textField_3 = new JTextField();
		textField_3.setBounds(455, 250, 102, 20);
		textField_3.setColumns(10);
		
		JButton btnEintragErstellen = new JButton("Eintrag erstellen");
		btnEintragErstellen.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				String nachname=textField_1.getText();
				String vorname=textField.getText();
				String kuerzel=textField_2.getText();
				String telefonnummer=textField_3.getText();
				Lehrer lehrerneu =new Lehrer();
				lehrerneu.set(vorname, nachname, kuerzel, telefonnummer);
				storage.lehrerListe.add(lehrerneu);
			}
		});
		btnEintragErstellen.setBounds(347, 363, 132, 23);
		btnEintragErstellen.setFont(new Font("Arial", Font.PLAIN, 11));
			
			
			
			
				
		contentPane.setLayout(null);
		contentPane.add(lblNeuerEintragFr);
		contentPane.add(btnZurck);
		contentPane.add(lblVorname);
		contentPane.add(lblNachname);
		contentPane.add(lblKrzel);
		contentPane.add(lblTelefonnummer);
		contentPane.add(textField);
		contentPane.add(textField_1);
		contentPane.add(textField_2);
		contentPane.add(textField_3);
		contentPane.add(btnEintragErstellen);
		
		JLabel lblBack = new JLabel("");
		Image img0 = new ImageIcon(this.getClass().getResource("/Hintergrund 800p.png")).getImage();
		lblBack.setIcon(new ImageIcon(img0));
		lblBack.setBounds(0, 0, 827, 450);
		contentPane.add(lblBack);
	}
}
