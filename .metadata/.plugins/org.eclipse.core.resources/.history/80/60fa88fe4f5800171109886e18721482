public class AusfEinzel extends JFrame {

	private JPanel contentPane;
	private JTextField textFieldNach;
	private JTextField textFieldVor;
	private JTextField textFieldBu;
	Storage storage;
	
	

	/**
	 * Create the frame.
	 */
	public AusfEinzel(Storage storage) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 800, 450);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		this.storage=storage;
		
		JLabel lblBitteGebenSie = new JLabel("Bitte geben Sie Ihre Daten ein!");
		lblBitteGebenSie.setBounds(302, 25, 260, 14);
		lblBitteGebenSie.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JButton btnZurck = new JButton("Zur√ºck");
		btnZurck.setBounds(15, 21, 102, 23);
		btnZurck.setFont(new Font("Arial", Font.PLAIN, 11));
		btnZurck.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				dispose();
				Ausleihfenster ausl1 =new Ausleihfenster(storage);
				ausl1.setVisible(true);
			}
		});
		
		JLabel lblNewLabel = new JLabel("Nachname");
		lblNewLabel.setBounds(106, 131, 92, 14);
		lblNewLabel.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JLabel lblNewLabel_1 = new JLabel("Vorname");
		lblNewLabel_1.setBounds(106, 169, 92, 14);
		lblNewLabel_1.setFont(new Font("Arial", Font.PLAIN, 11));
		
		textFieldNach = new JTextField();
		textFieldNach.setBounds(435, 128, 251, 20);
		textFieldNach.setColumns(10);
		
		textFieldVor = new JTextField();
		textFieldVor.setBounds(435, 166, 251, 20);
		textFieldVor.setColumns(10);
		
		JButton btnAuftragErstellen = new JButton("Auftrag erstellen");
		btnAuftragErstellen.setBounds(322, 372, 134, 23);
		btnAuftragErstellen.setFont(new Font("Arial", Font.PLAIN, 11));
		btnAuftragErstellen.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				String nachname=textFieldNach.getText();
				String vorname=textFieldVor.getText();
				String iSBN =textFieldBu.getText();
				
				Einzelperson einzelperson = storage.searchEinzelpersonName (vorname, nachname);
				Buch buch = storage.searchBuchISBN (iSBN);
				AuftragOK ok=new AuftragOK();
				ok.setVisible(true);
				
			}
		});
		
		JLabel lblBuch = new JLabel("BuchISBN");
		lblBuch.setBounds(106, 207, 92, 14);
		lblBuch.setFont(new Font("Arial", Font.PLAIN, 11));
		
		textFieldBu = new JTextField();
		textFieldBu.setBounds(435, 204, 251, 20);
		textFieldBu.setColumns(10);
		contentPane.setLayout(null);
		contentPane.add(lblBuch);
		contentPane.add(textFieldBu);
		contentPane.add(btnZurck);
		contentPane.add(lblBitteGebenSie);
		contentPane.add(lblNewLabel);
		contentPane.add(textFieldNach);
		contentPane.add(lblNewLabel_1);
		contentPane.add(textFieldVor);
		contentPane.add(btnAuftragErstellen);
		
		JLabel lblBack = new JLabel("");
		lblBack.setBounds(0, 0, 800, 450);
		contentPane.add(lblBack);
		Image img1 = new ImageIcon(this.getClass().getResource("/HintergrundBlau 800p.png")).getImage();
		lblBack.setIcon(new ImageIcon(img1));
	}
}
