package view;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import model.Einzelperson;
import model.Storage;

import javax.swing.GroupLayout;
import javax.swing.ImageIcon;
import javax.swing.GroupLayout.Alignment;
import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.LayoutStyle.ComponentPlacement;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Font;
import java.awt.Image;

public class EinzelpersonEnt extends JFrame {

	private JPanel contentPane;
	private JTextField textFieldNach;
	private JTextField textFieldVor;
	Storage storage;


	/**
	 * Create the frame.
	 */
	public EinzelpersonEnt(Storage storage) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 800, 450);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		this.storage=storage;
		
		JButton btnZurck = new JButton("Zurück");
		btnZurck.setBounds(15, 16, 93, 23);
		btnZurck.setFont(new Font("Arial", Font.PLAIN, 11));
		btnZurck.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				dispose();
			}
		});
		
		JLabel lblNeuerEintrag = new JLabel("Einzelperson entfernen");
		lblNeuerEintrag.setBounds(328, 20, 170, 14);
		lblNeuerEintrag.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JLabel lblNewLabel_1 = new JLabel("Nachname");
		lblNewLabel_1.setBounds(212, 183, 95, 14);
		lblNewLabel_1.setFont(new Font("Arial", Font.PLAIN, 11));
		
		JLabel lblNewLabel_2 = new JLabel("Vorname");
		lblNewLabel_2.setBounds(212, 221, 95, 14);
		lblNewLabel_2.setFont(new Font("Arial", Font.PLAIN, 11));
		
		textFieldNach = new JTextField();
		textFieldNach.setBounds(454, 180, 128, 20);
		textFieldNach.setColumns(10);
		
		textFieldVor = new JTextField();
		textFieldVor.setBounds(454, 218, 128, 20);
		textFieldVor.setColumns(10);
		
		JButton btnEintragErstellen = new JButton("Löschen\r\n");
		btnEintragErstellen.setBounds(342, 372, 128, 23);
		btnEintragErstellen.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				String nachname=textFieldNach.getText();
				String vorname=textFieldVor.getText();
				String adresse=textFieldAdr.getText();
				String telefonnummer=textFieldTele.getText();
				
				Einzelperson neueEinzelperson = new Einzelperson();
				neueEinzelperson.set(vorname, nachname, adresse, telefonnummer);
				storage.einzelpersonen.add(neueEinzelperson);
				
				EintragOK ok= new EintragOK();
				ok.setVisible(true);
			}
		});
		btnEintragErstellen.setFont(new Font("Arial", Font.PLAIN, 11));
		contentPane.setLayout(null);
		
		JLabel lblGebenSieDie = new JLabel("Geben Sie die Daten der Einzelperson ein, welchen Sie entfernen möchten");
		lblGebenSieDie.setFont(new Font("Arial", Font.PLAIN, 11));
		lblGebenSieDie.setBounds(212, 100, 370, 14);
		contentPane.add(lblGebenSieDie);
		contentPane.add(btnZurck);
		contentPane.add(lblNeuerEintrag);
		contentPane.add(btnEintragErstellen);
		contentPane.add(lblNewLabel_2);
		contentPane.add(lblNewLabel_1);
		contentPane.add(textFieldVor);
		contentPane.add(textFieldNach);
		
		JLabel lblBack = new JLabel("");
		lblBack.setBounds(0, 0, 784, 450);
		Image img0 = new ImageIcon(this.getClass().getResource("/Hintergrund 800p.png")).getImage();
		lblBack.setIcon(new ImageIcon(img0));
		contentPane.add(lblBack);
	}
}
